<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.restaurante.cibertec.apprestaurante.FiltrosActivity">


    <TextView
        android:id="@+id/lblOrdenar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordenar por: "
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <!--ImageView
        android:id="@+id/btnComida"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:onClick="seleccionado"
        android:src="@drawable/silverware_fork"
        android:layout_below="@id/lblOrdenar"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/lblComida"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnComida"
        android:paddingBottom="20dp"
        android:text="Comida"
        android:textAlignment="center"
        android:layout_margin="2dp"/-->

    <ImageView
        android:id="@+id/btnPrecio"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:onClick="seleccionado"
        android:src="@drawable/coin"
        android:layout_below="@id/lblOrdenar"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_margin="2dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/btnPrecio"
        android:text="Precio"/>

    <ImageView
        android:id="@+id/btnDistancia"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:onClick="seleccionado"
        android:layout_toRightOf="@id/btnPrecio"
        android:src="@drawable/map_marker"
        android:layout_below="@id/lblOrdenar"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/lblDistancia"
        android:layout_margin="2dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/btnDistancia"
        android:layout_toRightOf="@id/lblPrecio"
        android:text="Distancia"/>

    <ImageView
        android:id="@+id/btnRanking"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:onClick="seleccionado"
        android:layout_toRightOf="@id/btnDistancia"
        android:src="@drawable/ranking"
        android:layout_below="@id/lblOrdenar"
        android:layout_margin="2dp"/>

    <TextView
        android:id="@+id/lblRanking"
        android:layout_margin="2dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/btnRanking"
        android:layout_toRightOf="@id/btnDistancia"
        android:text="Ranking"/>

    <TextView
    android:id="@+id/lblTipoComida"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tipo de Comida: "
    android:textSize="20dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_below="@id/lblPrecio"/>

    <Button
        android:id="@+id/btnElegirTiposComida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblTipoComida"
        android:text="Elegir..."
        android:onClick="elegirTiposComida"/>

    <TextView
        android:id="@+id/lblDistrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distritos: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btnElegirTiposComida"/>

    <Button
        android:id="@+id/btnElegirDistritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblDistrito"
        android:text="Elegir..."
        android:paddingBottom="20dp"
        android:onClick="elegirDistritos"/>


</RelativeLayout>
